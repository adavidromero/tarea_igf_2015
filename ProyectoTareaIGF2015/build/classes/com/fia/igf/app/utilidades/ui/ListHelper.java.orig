				}else{
					if(claseTmp.getcClase()!=clase.getcClase()){
					listHtml+="<option value=\""+claseTmp.getcClase()+"\">"+
							claseTmp.getdClase()+"</option>";
					}
				}
			}
			listHtml+="</select>";
		}else{
			listHtml+="<select id=\""+nameId+"\" name=\""+nameId+"\" class=\"form-control\" "+readonly+">";
